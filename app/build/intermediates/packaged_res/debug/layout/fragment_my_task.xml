<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:background="#B0F4F2"
    tools:context=".fragments.TaskFrag">

  <!-- TODO: Update blank fragment layout -->

  <TextView
      android:id="@+id/MyTaskFrag"
      android:layout_width="390dp"
      android:layout_height="32dp"
      android:layout_marginTop="44dp"
      android:background="#F7C7C7"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/MyTaskFragTVName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_marginTop="56dp"
      android:layout_marginEnd="244dp"
      android:text="title"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintHorizontal_chainStyle="spread"
      app:layout_constraintStart_toEndOf="@+id/MyTaskFrag"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/MyTaskFragTVState"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="120dp"
      android:text="TextView"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/MyTaskFrag"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/MyTaskFragTVType"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="109dp"
      android:layout_marginEnd="153dp"
      android:layout_marginBottom="4dp"
      android:text="body"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.16"
      app:layout_constraintStart_toStartOf="parent" />

  <CheckBox
      android:id="@+id/taskStatusView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="32dp"

      android:text="state"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/MyTaskFrag"
      app:layout_constraintVertical_bias="0.375" />

</androidx.constraintlayout.widget.ConstraintLayout>
